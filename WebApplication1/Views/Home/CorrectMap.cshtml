<h2>Logg deg inn</h2>

<form asp-action="CorrectMap" method="post">
    <div class="form-group">
        <label for="latitude">Brukernavn</label>
        <input type="text" id="latitude" name="latitude" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label for="longitude">Passord</label>
        <input type="text" id="longitude" name="longitude" class="form-control" readonly />
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Logg inn</button>
    </div>

    <div class="form-group">
        <label for="description">Har du ikke bruker?</label>
        <textarea type="text" id="description" name="description" class="form-control"></textarea>
    </div>
    <div>
    <button type="submit" class="btn btn-primary">Lag ny bruker</button>
    </div>
</form>

<div id="map" style="height: 460px;"></div>

